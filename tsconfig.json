{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDirs": [
      "src",
      "test"
    ],
    "target": "es6",
    "experimentalDecorators": true, /* Enables Decorators */
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,             /* Generates TS files which will be helpful for debugging purposes */
    "strictNullChecks": true,      /* Enables strict null checks and prevent compilation for possible null variables */
    "noUnusedParameters": true,    /* Reports errors on unused parameters and prevent compilation */
    "resolveJsonModule": true,     /* Allows to import JSON files on the code */
    "lib": [
      "es6"
    ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}